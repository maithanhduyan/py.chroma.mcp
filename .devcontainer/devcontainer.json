{
  "name": "py.chroma.mcp",
  "dockerComposeFile": "docker-compose.yml",
  "workspaceFolder": "/workspace",
  "service": "py_chroma_mcp",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.autopep8",
        "ms-python.pylint",
        "ms-python.black-formatter"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/home/vscode/pylinux/bin/python",
        "python.terminal.activateEnvironment": true
      }
    }
  },
  "shutdownAction": "stopCompose",
  "forwardPorts": [3000],
  "postCreateCommand": "echo 'DevContainer ready!'",
  "remoteUser": "vscode"
}
