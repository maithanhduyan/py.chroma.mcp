{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Debug ChromaDB MCP Server",
      "type": "debugpy",
      "request": "launch",
      "program": "${workspaceFolder}/src/server.py",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}/src",
        "PYTHONUNBUFFERED": "1"
      },
      "stopOnEntry": false,
      "justMyCode": false,
      "args": []
    }
  ]
}
